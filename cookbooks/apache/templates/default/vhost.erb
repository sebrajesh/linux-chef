#vhost template file

<VirtualHost *:<%= @port %> >
  ServerName  <%= @domain %>
  DocumentRoot <%= @document_root %>

  <Directory />
    Options FollowSymlinks
    AllowOverride None
  </Directory>
  <Directory  <%= @document_root %> >
    Options Indexes FollowSymLinks Multiviews
    AllowOverride None
    Order allow,deny
    allow from all
  </Directory>
</VirtualHost>
